[user]
	name = Thiago Pontes
	email = github@thiago.me
	signingkey = 75FB72BF
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[alias]
    st = status -sb
    ci = commit
    br = branch
    co = checkout
    pullr = pull --rebase
    df = diff
    dfs = diff --staged
    dc = diff --cached
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lg = log --stat
    ls = ls-files
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[core]
	excludesfile = ~/.gitignore_global
[init]
	defaultBranch = main
[commit]
	gpgSign = true
[tag]
	gpgSign = true
